<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Nutricion">
		<jta-data-source>nutricion</jta-data-source>
		<class>entidades.Alimento</class>
		<class>entidades.AntecedentesAlimentario</class>
		<class>entidades.AntecedenteSalud</class>
		<class>entidades.Antropometria</class>
		<class>entidades.Cirugia</class>
		<class>entidades.DatosMedico</class>
		<class>entidades.FamiliarPaciente</class>
		<class>entidades.HistoriaClinica</class>
		<class>entidades.IntoleranciaAlergica</class>
		<class>entidades.Medicamento</class>
		<class>entidades.Paciente</class>
		<class>entidades.PatologiaAsociada</class>
		<class>entidades.ProblemaGastrointestinal</class>
		<class>entidades.SuplementoNutricional</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<!-- org.hibernate.dialect.MySQLDialect -->
		</properties>
	</persistence-unit>
</persistence>
